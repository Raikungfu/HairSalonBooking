<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fragment_profile"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:layout_gravity="top|left">

        <ImageView
            android:id="@+id/information_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/userAvt"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="top|left"
            android:scaleType="centerInside"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="100dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/textPrimary"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="top|left"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/textPrimary"
            android:textSize="14dp"/>

        <Button
            android:id="@+id/logout_Btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|right"
            android:scaleType="centerInside"
            android:text="Log out"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_primary"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:padding="1dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/customer_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/booking_history_Btn"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:scaleType="centerInside"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="My bookings"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/admin_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/manage_user_Btn"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:scaleType="centerInside"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Manage users"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/manager_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/manage_service_Btn"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:scaleType="centerInside"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Manage services"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/staff_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/manage_status_booking_Btn"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:scaleType="centerInside"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Manage status booking"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/stylist_view"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/check_booking_Btn"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:scaleType="centerInside"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center_horizontal|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Check bookings"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>
