<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <!-- Booking ID and Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/textBookingId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Booking ID: 123"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/textBookingDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="23 Oct 2024"
            android:textColor="@color/textSecondary"
            android:textSize="14sp" />

        <!-- Button to toggle details -->
        <ImageButton
            android:id="@+id/buttonToggleDetails"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/arrow_down_float"
            android:contentDescription="Toggle details"
            android:background="?attr/selectableItemBackground"
            android:layout_gravity="end"
            android:padding="8dp"
            />
    </LinearLayout>

    <!-- Total Price -->
    <TextView
        android:id="@+id/textTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price: $150"
        android:textColor="@color/textPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="4dp" />

    <!-- Customer Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/textCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer: John Doe"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/textCustomerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: (123) 456-7890"
            android:textColor="@color/textPrimary"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Service and Stylist Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/textService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service: Haircut"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textStylist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Stylist: Sarah"
            android:textColor="@color/textPrimary"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Status -->
    <TextView
        android:id="@+id/textBookingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Pending"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:paddingTop="8dp" />



    <!-- Booking details layout -->
    <LinearLayout
        android:id="@+id/layoutBookingDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/buttonCheckIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check In"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            android:padding="12dp"
            android:background="@drawable/img_rect_button_primary_big_inactive" />

        <Button
            android:id="@+id/buttonCheckOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Check Out"
            android:backgroundTint="@color/colorPrimaryVariant"
            android:textColor="@color/white"
            android:padding="12dp"
            android:background="@drawable/img_rect_button_primary_big_inactive" />
    </LinearLayout>

</LinearLayout>
